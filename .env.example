# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/telegive_db

# Service URLs
TELEGIVE_AUTH_URL=http://localhost:8001
TELEGIVE_CHANNEL_URL=http://localhost:8002
TELEGIVE_PARTICIPANT_URL=http://localhost:8004
TELEGIVE_BOT_URL=http://localhost:8005
TELEGIVE_MEDIA_URL=http://localhost:8006

# External APIs
TELEGRAM_API_BASE=https://api.telegram.org

# Application Settings
MAX_WINNER_COUNT=100
RESULT_TOKEN_LENGTH=32
CLEANUP_DELAY_MINUTES=5

# Rate Limiting
REDIS_URL=redis://localhost:6379/0
RATELIMIT_DEFAULT=1000 per hour

# Logging
LOG_LEVEL=INFO

# CORS Settings
CORS_ORIGINS=*

# Task Scheduler
SCHEDULER_TIMEZONE=UTC
ENABLE_CLEANUP_TASKS=true

# Health Check
HEALTH_CHECK_TIMEOUT=5

# Port (for Railway deployment)
PORT=8003

